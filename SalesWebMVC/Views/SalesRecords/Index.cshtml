
@{
    ViewData["Title"] = "Sales Records";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form class="form-inline" asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple Search</legend>
                <div class="form-group mb-3">
                    <label for="minData" class="col-lg-2 control-label text-nowrap">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label for="maxData" class="col-lg-2 control-label text-nowrap">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group mb-3">
                    <div class="col-lg-10 offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-inline" asp-action="GroupingSearch">
            <fieldset>
                <legend>Grouping Search</legend>
                <div class="form-group mb-3">
                    <label for="minData" class="col-lg-2 control-label text-nowrap">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label for="maxData" class="col-lg-2 control-label text-nowrap">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group mb-3">
                    <div class="col-lg-10 offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
